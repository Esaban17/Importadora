@model IEnumerable<ImportadoraModels.Usuario>

@{
    ViewData["Title"] = "List";
}


<div class="cont maincont">
    <p><a asp-controller="Usuario" asp-action="Create">Agregar Usuario</a></p>
    <h1><span>Usuarios</span></h1>
    <!-- Catalog Items - start -->
    <div class="section-list">
        @foreach (var item in Model)
        {
            <div class="sectls">
                <a href="product.html" class="sectls-img">
                    <img src="~/img/user.jpg" alt="">
                </a>
                <div class="sectls-cont">
                    <div class="sectls-ttl-wrap">
                        <h3><a href="#">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)</a></h3>
                        <p class="sectls-price">@Html.DisplayFor(modelItem => item.Correo)</p>
                    </div>
                    <div class="sectls-price-wrap">
                        <p>Dirección</p>
                        <p class="sectls-price">@Html.DisplayFor(modelItem => item.Direccion)</p>
                    </div>
                    <div class="sectls-price-wrap">
                        <p>Estado</p>
                        <p class="sectls-price">@Html.DisplayFor(modelItem => item.Estado)</p>
                    </div>
                    <div class="sectls-total-wrap">
                        <p>Ciudad</p>
                        <p class="sectls-total">@Html.DisplayFor(modelItem => item.Ciudad)</p>
                    </div>
                </div>
                <div class="sectls-info">
                    <p class="sectls-add">
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </p>
                    <p class="sectls-add">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </p>
                    <p class="sectls-add">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </p>
                </div>
            </div>
        }
    </div>
    <!-- Catalog Items - end -->
</div>